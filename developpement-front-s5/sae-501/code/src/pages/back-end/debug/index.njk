{% extends "layouts/back-end/base.njk" %}

{% set page_name = "debug" %}

{% block head_tags %}
    <link rel="icon" href="/images/wrench-screwdiver-favicon.svg">
{% endblock %}

{% set menu_entries = [
    {
        link: base_url ~ "/debug/router",
        name: "Liste des routes",
        icon: "/images/wrench-screwdiver-icon.svg"
    },
    {
        link: base_url ~ "/swagger",
        name: "Swagger",
        icon: "/images/code-icon.svg"
    },
    {
        link: base_url ~ "/debug/eslint",
        name: "eslint (server)",
        icon: "/images/code-icon.svg"
    }
] %}

{% block title %}Debug{% endblock %}

{% block main %}
    <div class="bg-white rounded-2xl shadow-md pb-6">
        <header class="mb-1 p-6 pr-4 pl-8 flex justify-between gap-2 lg:flex-row flex-col">
            <p class="text-4xl">
                Debug
                <span class="block text-sm">Accessible uniquement en mode "d√©veloppement"</span>
            </p>
        </header>
        <ul class="
            px-6 grid grid-cols-1
            xl:grid-cols-4
            sm:max-xl:portrait:grid-cols-2
            sm:max-lg:landscape:grid-cols-2
            sm:max-xl:grid-cols-3 
            gap-4
        ">
            {% for item in menu_entries %}        
                <li class="border-t-2 aspect-square">
                    <a 
                        href="{{ item.link }}" 
                        class="
                            flex w-full h-full items-center justify-center
                            flex-col 
                            px-2 py-3 rounded-lg gap-3 text-base hover:bg-blue-100
                        "
                    >
                        <div class="w-13">
                            <img src="{{ item.icon if item.icon else "/images/wrench-screwdiver-icon.svg" }}" alt="" >
                        </div>
                        <p class="text-center">{{ item.name }}</p>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}