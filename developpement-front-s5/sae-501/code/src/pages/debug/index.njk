{% extends "layouts/back-end/base.njk" %}

{% set page_name = "debug" %}

{% set menu_entries = [
    {
        link: base_url ~ "/debug/router",
        name: "Liste des routes"
    },
    {
        link: base_url ~ "/swagger",
        name: "Swagger"
    }
] %}

{% block main %}
    <div class="bg-white rounded-2xl shadow-md pb-6">
        <header class="mb-1 p-6 pr-4 pl-8 flex justify-between gap-2 lg:gap-0 lg:flex-row flex-col">
            <p class="text-4xl">
                Debug
            </p>
        </header>
        <ul class="px-6 grid grid-cols-2 lg:grid-cols-4 gap-4">
            {% for item in menu_entries %}        
                <li class="mt-0.5 border-t-2 aspect-square">
                    <a 
                        href="{{ item.link }}" 
                        class="
                            flex w-full h-full items-center justify-center
                            flex-col 
                            px-4 py-3 rounded-lg gap-3 text-base hover:bg-blue-100
                        "
                    >
                        <figure class="w-13">
                            <img src="/images/wrench-screwdiver-icon.svg" alt="">
                        </figure>
                        <p>{{ item.name }}</p>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}