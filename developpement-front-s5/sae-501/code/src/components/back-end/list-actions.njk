{% macro edit(link, label = 'Editer') %}
    <a 
        href="{{ link }}" 
        class="text-blue-700 text-sm focus-within:text-blue-900 hover:text-blue-900 sm:w-fit justify-center inline-flex gap-1 items-center grow">
        <svg aria-hidden="true" focusable="false" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"/>
        </svg>

        {{ label }}
    </a>
{% endmacro %}

{% macro delete(link, title, label = 'Supprimer') %}
    <button 
        type="button" 
        class="text-sm text-red-600 hover:text-red-800 focus-within:text-red-800 inline-flex w-fit justify-center gap-1 items-center grow" 
        data-modal="delete-entry" 
        data-delete-name='{{ title }}' 
        data-delete-url="{{ link }}"
    >
        {% include "components/icons/delete-icon.njk" %}
        {{ label }}
    </button>
{% endmacro %}