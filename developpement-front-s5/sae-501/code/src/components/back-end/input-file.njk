{% macro field(imagename, folder, accepts = ".jpg, .jpeg, .png", name = "image", id = "image") %}
    {% set border_classes = "border-b border-solid border-slate-300" %}
    {% set custom_upload_dir = folder | default(upload_dir) %}
    <div>
        <table class="table-fixed w-full">
            <thead>
                <tr>
                    <th class="{{ border_classes }} text-sm font-bold p-1">Nouvelle image</th>
                    <th class="{{ border_classes }} text-sm font-bold p-1">Image actuelle</th>
                </tr>
            </thead>
            <tbody>
                <tr class="relative">
                    <td class="{{ border_classes }} p-5 md:p-2 bg-clip-padding align-top">
                        <p class="text-sm font-bold p-1 text-center block @2xl/main:hidden">Nouvelle image</p>
                        <div class="absolute text-4xl right-2/4 top-2/4 -translate-y-2/4 translate-x-2/4 m-0 rotate-90 z-10 @2xl/main:rotate-0 bg-blue-700 text-white rounded-2xl p-1">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                                <path fill-rule="evenodd" d="M12.97 3.97a.75.75 0 0 1 1.06 0l7.5 7.5a.75.75 0 0 1 0 1.06l-7.5 7.5a.75.75 0 1 1-1.06-1.06l6.22-6.22H3a.75.75 0 0 1 0-1.5h16.19l-6.22-6.22a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                        <div class="relative">
                            <button data-delete-preview-upload-button="{{ name }}" type="button" class="absolute right-2/4 bottom-4 translate-x-2/4 rounded-2xl shadow-sm bg-red-600 hover:bg-red-800 focus-within:bg-red-800 px-4 py-2 text-white hidden text-sm">Annuler</button>
                            <figure class="flex justify-center items-center h-[16rem]">
                                <img data-preview-upload="{{ name }}" alt="" class="max-w-full max-h-full">
                            </figure>
                        </div>
                    </td>
                    <td class="{{ border_classes }} p-5 md:p-2 bg-clip-padding align-top">
                        <p class="text-sm font-bold p-1 text-center block @2xl/main:hidden">Image actuelle</p>
                        <figure class="flex justify-center items-center h-[16rem] relative">
                            <img src="{{ custom_upload_dir ~ imagename if imagename else null }}" data-current-image="{{ name }}" data-image-path="{{ custom_upload_dir ~ imagename if imagename else null }}" alt="" class="max-w-full max-h-full">
                    
                            {% if imagename %}
                                <button type="button" data-delete-current-image-button="{{ name }}" class="absolute right-2/4 bottom-4 translate-x-2/4 rounded-2xl shadow-sm bg-red-600 text-sm hover:bg-red-800 focus-within:bg-red-800 px-4 py-2 text-white">Supprimer</button>
                                <input type="checkbox" class="hidden" name="delete_file_{{name}}" id="" data-current-image-checkbox="{{ name }}">
                            {% endif %}
                        </figure>
                    </td>
                </tr>
                <tr class="{{ border_classes }} max-h-fit">
                    <td class="h-full py-3" colspan="2">
                        <div 
                            class="flex flex-col gap-y-4 p-5 
                                h-full items-center
                                rounded-lg animated-border relative
                            "
                            data-drag-n-drop-area="{{ name }}"
                        >
                            <p class="text-slate-600">Glissez-déposez votre image</p>
                            <p class="text-sm">ou</p>

                            <div class="flex gap-3 flex-col sm:flex-row items-center">
                                <label 
                                    class="text-sm 
                                    py-2 px-4
                                    rounded-2xl border-0
                                    bg-blue-700 hover:bg-blue-950
                                    focus-within:bg-blue-950
                                    text-white
                                    text-center
                                    w-fit
                                    block
                                ">
                                    Sélectionnez un fichier
                                    <input 
                                        data-upload-file="{{ name }}"
                                        type="file" 
                                        accept="{{ accepts }}"
                                        class="w-0 h-0 file:hidden absolute -z-50"
                                        id="{{ id }}"
                                        name="{{ name }}"
                                    />
                                </label>
                                <button 
                                    type="button" 
                                    class="text-sm self-start rounded-2xl block py-2 px-4 border-sky-500 text-slate-700 bg-sky-50 hover:bg-sky-100" 
                                    data-clipboard-upload="{{ name }}"
                                >
                                    Coller depuis le presse-papier
                                </button>
                            </div>
                           
                            <p class="mt-1 text-sm text-slate-500" data-input-file-indicator="{{ name }}">Fichiers {{ accepts }} seulement (taille max. 800kB)</p>
                        
                            <p class="rounded-lg p-2 flex items-center justify-center gap-2 bg-red-100 border-solid border-x border-y border-red-700" data-incorrect-upload="{{ name }}">
                                <span data-error-message>Format incorrect</span>
                                <button type="button">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12"/>
                                    </svg>
                                </button>
                            </p>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
{% endmacro %}