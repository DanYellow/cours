{% macro previous(url, is_disabled = false) %}
    {% if is_disabled %}
        <span class="gap-x-2 items-center px-2 py-4 opacity-30 flex text-gray-500">
            <svg class="h-5 w-5" fill="none" viewbox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"/>
            </svg>
            <span class="hidden lg:inline">Précédent</span>
        </span>
    {% else %}
        <a aria-label="Précédent" href="{{ url }}" class="gap-x-2 items-center px-2 py-4 border-t-2 border-t-transparent focus-within:text-blue-700 hover:text-blue-700 border-solid flex">
            <svg class="h-5 w-5" fill="none" viewbox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"/>
            </svg>
            <span class="hidden lg:inline">Précédent</span>
        </a>
    {% endif %}
{% endmacro %}

{% macro next(url, is_disabled = false) %}
    {% if is_disabled %}
        <span class="gap-x-2 items-center px-2 py-4 opacity-30 lg:flex text-gray-500">
            <span class="hidden lg:inline">Suivant</span>
            <svg class="h-5 w-5 " fill="none" viewbox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
        </span>
    {% else %}
        <a aria-label="Suivant" href="{{ url }}" class="gap-x-2 items-center px-2 py-4 border-t-2 border-t-transparent focus-within:text-blue-700 hover:text-blue-700 border-solid flex">
            <span class="hidden lg:inline">Suivant</span>
            <svg class="h-5 w-5" fill="none" viewbox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
        </a>
    {% endif %}
{% endmacro %}

{% set out_of_range = false %}

{% macro item(paginator, name="") %}
    {% set query_params = "&" ~ (paginator.query_params) if paginator.query_params else "" %}
    {% set nb_items_to_show = 2 %}

    {% if paginator.total_pages > 1 %}
        <div class="flex gap-3 items-center flex-col md:flex-row z-10">
            <label for="select-page" class="hidden md:block">Aller à la page :</label>
            <select class="h-full" id="select-page" data-paginator="{{ name }}">
                {% for i in range(1, paginator.total_pages + 1) %}
                    <option {{ "selected" if i == paginator.page else "" }} value="{{ i }}">{{ 'Page ' ~ i }}</option>
                {% endfor %}
            </select>
        </div>
        <nav class="flex justify-between px-4 absolute md:static inset-0" role="navigation" aria-label="Pagination">
            {{ previous("?page=" ~ (paginator.page - 1) ~ query_params, paginator.page <= 1) }}
            <ul class="flex">
                {% for i in range(1, paginator.total_pages + 1) %}
                    {% if (i <= 1 or i >= paginator.total_pages - nb_items_to_show or (i - paginator.page)|abs <= nb_items_to_show) %}
                        <li class="hidden lg:[display:revert]">
                            {% if i == paginator.page %}
                                <span class="border-t-blue-500 font-bold block p-4 border-t-2 border-solid" aria-current="page">{{ i }}</span>
                            {% else %}
                                <a class="border-t-transparent hover:border-t-blue-200 focus-within:border-t-blue-200 focus-within:text-blue-700 hover:text-blue-700 block p-4 border-t-2 border-solid" href="{{ current_url ~ "?page=" ~ i ~ query_params }}">{{ i }}</a>
                            {% endif %}
                        </li>
                    {% elseif out_of_range == false %}
                        <li>
                            <span class="block p-4 text-gray-500">…</span>
                        </li>
                        {% set out_of_range = true %}
                    {% endif %}
                {% endfor %}
            </ul>
            {{ next("?page=" ~ (paginator.page + 1) ~ query_params, paginator.page >= paginator.total_pages) }}
        </nav>
    {% endif %}
{% endmacro %}
