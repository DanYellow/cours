{% if NODE_ENV == "development" %}
    <style>
        .profiler-bar {
            transition-property: translate;
            transition-timing-function: ease-in;
            transition-duration: 0.25s;

            &.hide {
                translate: 0 200%;
            }
        }

        .btn-open-profiler-bar {
            scale: 0;
            transition-property: scale;
            transition-timing-function: ease-in;
            transition-duration: 0.1s;
            transition-delay: 0.02s;

            &.show {
                scale: 1;
            }
        }
    </style>
    <div class="fixed -translate-x-1/2 left-1/2 bottom-6 z-50">
        <button data-profiler-bar-open-btn  class="btn-open-profiler-bar rounded-full bg-blue-700 hover:bg-blue-800 p-3 text-gray-100 border border-gray-100 border-solid">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M14.25 6.087c0-.355.186-.676.401-.959.221-.29.349-.634.349-1.003 0-1.036-1.007-1.875-2.25-1.875s-2.25.84-2.25 1.875c0 .369.128.713.349 1.003.215.283.401.604.401.959v0a.64.64 0 0 1-.657.643 48.39 48.39 0 0 1-4.163-.3c.186 1.613.293 3.25.315 4.907a.656.656 0 0 1-.658.663v0c-.355 0-.676-.186-.959-.401a1.647 1.647 0 0 0-1.003-.349c-1.036 0-1.875 1.007-1.875 2.25s.84 2.25 1.875 2.25c.369 0 .713-.128 1.003-.349.283-.215.604-.401.959-.401v0c.31 0 .555.26.532.57a48.039 48.039 0 0 1-.642 5.056c1.518.19 3.058.309 4.616.354a.64.64 0 0 0 .657-.643v0c0-.355-.186-.676-.401-.959a1.647 1.647 0 0 1-.349-1.003c0-1.035 1.008-1.875 2.25-1.875 1.243 0 2.25.84 2.25 1.875 0 .369-.128.713-.349 1.003-.215.283-.4.604-.4.959v0c0 .333.277.599.61.58a48.1 48.1 0 0 0 5.427-.63 48.05 48.05 0 0 0 .582-4.717.532.532 0 0 0-.533-.57v0c-.355 0-.676.186-.959.401-.29.221-.634.349-1.003.349-1.035 0-1.875-1.007-1.875-2.25s.84-2.25 1.875-2.25c.37 0 .713.128 1.003.349.283.215.604.401.96.401v0a.656.656 0 0 0 .658-.663 48.422 48.422 0 0 0-.37-5.36c-1.886.342-3.81.574-5.766.689a.578.578 0 0 1-.61-.58v0Z"/>
            </svg>
        </button>
    </div>
    <div data-profiler-bar tabindex="-1" class="profiler-bar overflow-hidden w-fit left-1/2 -translate-x-1/2 bottom-6 z-50 fixed flex flex-row justify-between bg-gray-200 border border-gray-500 rounded-lg shadow-sm dark:bg-gray-700 dark:border-gray-600 opacity-100 touch:hidden hover:opacity-100">
        <div class="py-2 px-4 bg-green-700 text-gray-500 dark:text-gray-200">
            <p class="text-xs font-bold">HTTP status</p>
            <p class="text-lg ">
                {{ profiler.statusCode }}
            </p>
        </div>
        <div class="py-2 px-4 text-gray-500 dark:text-gray-200 border-l-gray-100 border-solid border-l">
            <p class="text-xs font-bold">Current route</p>
            <p class="text-lg">
                @{{ profiler.current_route }}
            </p>
            <a href="{{ routeName("debug_router") }}" target="_blank" class="flex gap-1 justify-center items-center text-center px-5 py-2 text-xs text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                See all routes
                <span>
                    <svg aria-hidden="true" focusable="false" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"></path>
                    </svg>
                </span>
            </a>
        </div>
        <div class="py-2 px-4 text-gray-500 dark:text-gray-200 border-l-gray-100 border-solid border-l">
            <p class="text-xs font-bold">Response time</p>
            <p class="text-lg">
                {{ profiler.response_time }}
            </p>
        </div>
        <div class="py-2 px-4 border-l-gray-100 border-solid border-l text-gray-500 dark:text-gray-200 flex flex-col gap-1">
            <p class="text-xs font-bold">Eslint</p>
            <p class="text-lg font-normal">{{ profiler.eslint_report.errorCount }} error(s), {{ profiler.eslint_report.warningCount }} warning(s)</p>
            <a href="{{ routeName("eslint") }}" target="_blank" class="flex gap-1 justify-center items-center text-center px-5 py-2 text-xs text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                See more
                <span>
                    <svg aria-hidden="true" focusable="false" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"></path>
                    </svg>
                </span>
            </a>
        </div>
        <div>
            <button data-profiler-bar-close-btn type="button" class="flex-shrink-0 inline-flex justify-center w-7 h-7 items-center text-gray-400 hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 dark:hover:bg-gray-600 dark:hover:text-white">
                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                </svg>
            </button>
        </div>
    </div>
{% endif %}